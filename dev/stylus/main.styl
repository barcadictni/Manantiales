@import 'fonts.styl'
@import 'normalize.styl'
@import 'nib'


//Colores
azul-oscuro = #082C4E
azul-claro = #1363A8
gris-tenue = #DFDFDF
gris-tono2 = #B3B3B3

//OOCSS
alinear()
	display inline-block
	vertical-align top
rem(pixel)
	(pixel/14)rem
html
	font-size: 14px
a
	text-decoration none
ul
p
figure
	margin 0
	padding 0
ul
	list-style none
h1
	font-family: RobotoBold
	font-size: rem(30)
	color headers
h2
	font-family: RobotoBold
	font-size: rem(24)
	color headers
h3
	font-family: RobotoBold
	font-size: rem(36)
	color headers
	margin-top: 0
input[type="text"]
input[type="mail"]
	border 1px solid #d0dee7
	box-sizing border-box
	height 30px
	padding-left: .7rem
	width 100%
textarea
	border 1px solid #d0dee7
	box-sizing border-box
	padding-left: .7rem
	width 100%
body
	font-family: OpenSans400
	font-size: 14px
	font-weight: normal
	color headers

